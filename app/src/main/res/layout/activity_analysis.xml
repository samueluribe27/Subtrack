<?xml version="1.0" encoding="utf-8"?>
<!-- Root ConstraintLayout to hold both scrollable content and the fixed navigation bar -->
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.analysis.AnalysisActivity">

    <!-- Scrollable Content Area: Constrained to the top and above the nav bar -->
    <ScrollView
        android:id="@+id/mainScrollView"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:clipToPadding="false"
        android:paddingStart="16dp"
        android:paddingTop="16dp"
        android:paddingEnd="16dp"
        app:layout_constraintBottom_toTopOf="@+id/nav_view"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingBottom="16dp">

            <!-- Header -->
            <TextView
                android:id="@+id/tvHeaderTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Análisis"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tvHeaderSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Estadísticas de tus suscripciones"
                android:textColor="@android:color/darker_gray"
                android:textSize="14sp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/tvHeaderTitle" />

            <!-- Annual Cost Card (Gradient Simulation) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardAnnualCost"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#673AB7"
                app:cardCornerRadius="24dp"
                app:layout_constraintTop_toBottomOf="@+id/tvHeaderSubtitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_gradient"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:alpha="0.9"
                        android:text="Gasto anual proyectado"
                        android:textColor="@color/white"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/tvTotalYearlyCost"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="4dp"
                        android:text="$0.00"
                        android:textColor="@color/white"
                        android:textSize="36sp"
                        android:textStyle="bold" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:gravity="center_vertical"
                        android:orientation="horizontal">

                        <!-- TrendingUp Icon Placeholder (using Vector Asset for simplicity) -->
                        <ImageView
                            android:layout_width="16dp"
                            android:layout_height="16dp"
                            android:src="@drawable/outline_arrow_outward_24"
                            app:tint="@color/white" />

                        <TextView
                            android:id="@+id/tvSubscriptionCount"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:text="Basado en 0 suscripciones activas"
                            android:textColor="@color/white"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Category Breakdown Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardCategoryBreakdown"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardAnnualCost">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Distribución por categoría"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Pie Chart Placeholder -->
                    <View
                        android:id="@+id/chartPiePlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="200dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/white"
                        tools:background="#E0E0E0" />
                    <!-- NOTE: Replace the View above with a chart library implementation (e.g., MPAndroidChart) -->

                    <!-- Category List Container -->
                    <LinearLayout
                        android:id="@+id/categoryListContainer"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="16dp"
                        android:orientation="vertical"
                        tools:ignore="NestedWeights" />

                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Monthly Projection Card -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMonthlyProjection"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:elevation="4dp"
                app:cardCornerRadius="16dp"
                app:layout_constraintTop_toBottomOf="@+id/cardCategoryBreakdown">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Proyección próximos meses"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <!-- Bar Chart Placeholder -->
                    <View
                        android:id="@+id/chartBarPlaceholder"
                        android:layout_width="match_parent"
                        android:layout_height="180dp"
                        android:layout_marginTop="8dp"
                        android:background="@android:color/white"
                        tools:background="#E0E0E0" />
                    <!-- NOTE: Replace the View above with a chart library implementation (e.g., MPAndroidChart) -->
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Recommendations/Insights -->
            <TextView
                android:id="@+id/tvRecommendationsTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="Recomendaciones"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cardMonthlyProjection" />

            <!-- Most Expensive Insight Card (Orange) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardMostExpensive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#FFF7EE"
                app:cardCornerRadius="16dp"
                app:strokeColor="#FBD38D"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@+id/tvRecommendationsTitle">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- AlertCircle Icon Placeholder -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/outline_crisis_alert_24"
                        app:tint="#F97316"
                        android:contentDescription="Alert Icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Tu suscripción más cara"
                            android:textColor="#9A3412"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvMostExpensiveDetails"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="[Cargando...]"
                            android:textColor="#C2410C"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

            <!-- Savings Potential Insight Card (Green) -->
            <com.google.android.material.card.MaterialCardView
                android:id="@+id/cardSavingsPotential"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:elevation="0dp"
                app:cardBackgroundColor="#F0FFF4"
                app:cardCornerRadius="16dp"
                app:strokeColor="#A7F3D0"
                app:strokeWidth="1dp"
                app:layout_constraintTop_toBottomOf="@+id/cardMostExpensive">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="16dp">

                    <!-- TrendingDown Icon Placeholder -->
                    <ImageView
                        android:layout_width="24dp"
                        android:layout_height="24dp"
                        android:src="@drawable/ic_trending_down"
                        app:tint="#10B981"
                        android:contentDescription="Trending Down Icon" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="12dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Potencial de ahorro"
                            android:textColor="#065F46"
                            android:textSize="14sp" />

                        <TextView
                            android:id="@+id/tvSavingsPotential"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="2dp"
                            android:text="[Cargando...]"
                            android:textColor="#059669"
                            android:textSize="12sp" />
                    </LinearLayout>
                </LinearLayout>
            </com.google.android.material.card.MaterialCardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>

    <!-- Fixed Bottom Navigation View -->
    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/nav_view"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="?android:attr/windowBackground"
        android:elevation="8dp"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:itemIconTint="@color/nav_item_color"
        app:itemTextColor="@color/nav_item_color"
        app:menu="@menu/bottom_nav_menu" />

</androidx.constraintlayout.widget.ConstraintLayout>