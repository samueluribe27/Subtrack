<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background_light"
    tools:context=".ui.dashboard.DashboardFragment">

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F8F9FB"
    tools:context=".MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="24dp">

        <!-- T칤tulo principal -->
        <TextView
            android:id="@+id/titleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="A침adir suscripci칩n"
            android:textSize="22sp"
            android:textStyle="bold"
            android:textColor="#1C1C1E"
            android:layout_marginBottom="4dp" />

        <!-- Subt칤tulo -->
        <TextView
            android:id="@+id/subtitleText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Completa los detalles de tu nueva suscripci칩n"
            android:textSize="14sp"
            android:textColor="#6D6D6D"
            android:layout_marginBottom="20dp" />

        <!-- Contenedor principal del formulario -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_subs"
            android:padding="20dp"
            android:layout_marginBottom="20dp">

            <!-- Campo: Nombre del servicio -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Nombre del servicio"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/serviceNameInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="Ej: Netflix, Spotify, etc."
                android:background="@drawable/bg_input_subs"
                android:paddingHorizontal="16dp"
                android:textColorHint="#A1A1A1"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo: Categor칤a -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Categor칤a"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <Spinner
                android:id="@+id/categorySpinner"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@drawable/bg_input_subs"
                android:paddingHorizontal="12dp"
                android:layout_marginBottom="16dp" />

            <!-- Campo: Precio mensual -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precio mensual"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/monthlyPriceInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="$ 0.00"
                android:inputType="numberDecimal"
                android:background="@drawable/bg_input_subs"
                android:paddingHorizontal="16dp"
                android:textColorHint="#A1A1A1"
                android:textColor="#000000"
                android:layout_marginBottom="16dp" />

            <!-- Campo: Pr칩xima fecha de cobro -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Pr칩xima fecha de cobro"
                android:textColor="#1C1C1E"
                android:textStyle="bold"
                android:textSize="14sp"
                android:layout_marginBottom="8dp" />

            <EditText
                android:id="@+id/paymentDateInput"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:hint="dd/mm/aaaa"
                android:background="@drawable/bg_input_subs"
                android:paddingHorizontal="16dp"
                android:focusable="false"
                android:textColorHint="#A1A1A1"
                android:textColor="#000000" />
        </LinearLayout>

        <!-- Botones -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:weightSum="2"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/cancelButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_marginEnd="8dp"
                android:layout_weight="1"
                android:background="@drawable/bg_button_cancel"
                android:text="Cancelar"
                android:textColor="@color/background_light" />

            <Button
                android:id="@+id/createButton"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:text="Crear"
                android:textColor="#FFFFFF"
                android:background="@drawable/bg_button_gradient" />
        </LinearLayout>

        <!-- Tarjeta de consejo -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@drawable/bg_card_subs"
            android:padding="16dp">

            <TextView
                android:text="游눠 Consejo"
                android:textStyle="bold"
                android:textColor="#1C1C1E"
                android:textSize="14sp"
                android:layout_marginBottom="6dp" />

            <TextView
                android:text="A침ade todas tus suscripciones para tener un control total de tus gastos recurrentes y evitar cobros inesperados."
                android:textColor="#6D6D6D"
                android:textSize="13sp" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>
    <com.google.android.material.bottomnavigation.BottomNavigationView
android:id="@+id/nav_subs"
android:layout_width="0dp"
android:layout_height="wrap_content"
android:background="?android:attr/windowBackground"
android:elevation="8dp"
app:labelVisibilityMode="labeled"
app:layout_constraintBottom_toBottomOf="parent"
app:layout_constraintStart_toStartOf="parent"
app:layout_constraintEnd_toEndOf="parent"
app:menu="@menu/bottom_nav_menu" />
    </androidx.constraintlayout.widget.ConstraintLayout>
